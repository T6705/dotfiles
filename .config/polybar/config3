[module/spotify]
type              = custom/script
exec              = bash ~/.config/polybar/spotify_p.sh
exec-if           = pgrep -x spotify
tail              = true
interval          = 1.5
format            = <label>
format-foreground = ${colors.foreground}
label             = ÔÄÅ%{F#ff69b4}%{T2}%output%%{T-}%{F-}
click-left        = i3 workspace number 8

[module/playpause]
type              = custom/script
exec              = bash ~/.config/polybar/playpause.sh
exec-if           = pgrep -x spotify
format-padding    = 1
interval          = 1.5
format            = <label>
format-foreground = ${colors.foreground}
click-left        = playerctl play-pause

[module/next]
type              = custom/script
exec              = bash ~/.config/polybar/next.sh
exec-if           = pgrep -x spotify
format-padding    = 1
interval          = 1.5
format            = <label>
format-foreground = ${colors.foreground}
click-left        = playerctl next

[module/previous]
type              = custom/script
exec              = bash ~/.config/polybar/previous.sh
exec-if           = pgrep -x spotify
format-padding    = 1
format            = <label>
format-foreground = ${colors.foreground}
click-left        = playerctl previous

